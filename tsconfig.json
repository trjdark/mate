{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": false,
    "rootDirs": ["./src"],
    "baseUrl": "./src",
    "paths": {
      "@redux-actions/*": ["redux-actions/*"],
      "@/*": ["*"]
    },
    "jsx": "react",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],
    "skipLibCheck": true,
    "typeRoots": ["node", "node_modules/@types"],
  }
}